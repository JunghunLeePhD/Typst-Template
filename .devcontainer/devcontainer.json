{
  "name": "Typst Project",
  "image": "ghcr.io/junghunleephd/typst-template-env:main",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "nvarner.typst-lsp",
        "myriad-dreamin.tinymist"
      ],
      "[typst]": {
        "editor.formatOnSave": true
      }
    }
  }
}